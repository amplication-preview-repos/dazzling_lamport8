datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model VacationRule {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  policy      String?
  title       String?
  updatedAt   DateTime @updatedAt
}

model VacationPolicy {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  createdAt        DateTime         @default(now())
  email            String?          @unique
  firstName        String?
  id               String           @id @default(cuid())
  lastName         String?
  password         String
  roles            Json
  updatedAt        DateTime         @updatedAt
  username         String           @unique
  vacationPolicies VacationPolicy[]
}
